# SecureVault Production Environment Variables
# IMPORTANT: These are example values. Replace with your actual production secrets!
# Never commit real production secrets to version control.

# Database Configuration
DB_HOST=your-postgres-host.amazonaws.com
DB_NAME=securevault_prod
DB_USER=securevault_user
DB_PASSWORD=your-super-secure-db-password-here
DB_ENCRYPTION_KEY=your-32-byte-database-encryption-key-here-must-be-exactly-32-chars

# Security Keys (Generate with: openssl rand -base64 64)
JWT_SECRET=your-jwt-secret-key-must-be-at-least-64-bytes-long-for-production-security
HMAC_SECRET=your-hmac-signing-key-32-bytes-here
CSRF_SECRET=your-csrf-protection-key-32-bytes

# Redis Configuration
REDIS_URL=rediss://your-redis-cluster.amazonaws.com:6379
REDIS_PASSWORD=your-redis-password-here

# MFA Provider Configuration - Twilio SMS
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration - Gmail/G Suite example
SMTP_HOST=smtp.gmail.com
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-app-password-here

# Pushover Push Notifications
PUSHOVER_APP_TOKEN=your-pushover-app-token-here
PUSHOVER_USER_KEY=your-pushover-user-key-here

# AWS S3 for Backups and File Storage
BACKUP_S3_BUCKET=securevault-backups-prod
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-bytes

# Monitoring and Observability
JAEGER_ENDPOINT=https://your-jaeger-instance.com

# Optional Integrations
LDAP_SERVER=ldap.yourdomain.com
LDAP_BIND_DN=cn=readonly,dc=yourdomain,dc=com
LDAP_BIND_PASSWORD=your-ldap-bind-password
LDAP_USER_BASE=ou=users,dc=yourdomain,dc=com
LDAP_GROUP_BASE=ou=groups,dc=yourdomain,dc=com

# SAML SSO Configuration
SAML_IDP_URL=https://your-idp.com/saml/sso
SAML_IDP_CERT=/path/to/idp-cert.pem
SAML_SP_CERT=/path/to/sp-cert.pem
SAML_SP_KEY=/path/to/sp-key.pem

# Application Configuration
APP_DOMAIN=vault.yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com
API_BASE_URL=https://api.vault.yourdomain.com

# TLS Certificates
TLS_CERT_PATH=/etc/ssl/certs/vault.crt
TLS_KEY_PATH=/etc/ssl/private/vault.key

# Database SSL Configuration
DB_SSL_MODE=require
DB_SSL_CERT=/etc/ssl/certs/postgres-client.crt
DB_SSL_KEY=/etc/ssl/private/postgres-client.key
DB_SSL_ROOT_CERT=/etc/ssl/certs/postgres-ca.crt

# Additional Security Configuration
ALLOWED_ORIGINS=https://vault.yourdomain.com,https://admin.yourdomain.com
CSRF_TRUSTED_ORIGINS=vault.yourdomain.com,admin.yourdomain.com

# Deployment Information
DEPLOYMENT_ENV=production
BUILD_VERSION=1.0.0
COMMIT_SHA=production-build
DEPLOY_TIME=2024-01-15T00:00:00Z

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_INTRUSION_DETECTION=true
ENABLE_BREACH_DETECTION=true
ENABLE_GEO_BLOCKING=false
ENABLE_2FA_ENFORCEMENT=true

# Contact and Support
SUPPORT_EMAIL=support@yourdomain.com
SECURITY_EMAIL=security@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Compliance and Legal
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
DATA_CONTROLLER=Your Company Name
DPO_EMAIL=dpo@yourdomain.com
GDPR_REPRESENTATIVE=Your GDPR Representative

# Emergency Configuration
EMERGENCY_ACCESS_ENABLED=true
EMERGENCY_CONTACT=emergency@yourdomain.com
INCIDENT_RESPONSE_TEAM=security@yourdomain.com

# Performance Tuning
MAX_CONCURRENT_CONNECTIONS=1000
MAX_REQUEST_SIZE=10485760  # 10MB
MAX_UPLOAD_SIZE=104857600  # 100MB
WORKER_PROCESSES=4
REQUEST_TIMEOUT=30s
KEEPALIVE_TIMEOUT=65s

# Health Checks and Monitoring
HEALTH_CHECK_INTERVAL=30s
METRICS_COLLECTION_INTERVAL=60s
LOG_RETENTION_DAYS=90
ALERT_NOTIFICATION_WEBHOOK=https://your-alerting-system.com/webhook

# Security Scanning and Vulnerability Management
SECURITY_SCAN_ENABLED=true
DEPENDENCY_CHECK_ENABLED=true
VULNERABILITY_DB_UPDATE_INTERVAL=24h
SECURITY_SCAN_WEBHOOK=https://your-security-tool.com/webhook

# Backup and Recovery
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=90
DISASTER_RECOVERY_REGION=us-east-1
RTO_TARGET=3600 # 1 hour Recovery Time Objective
RPO_TARGET=300  # 5 minutes Recovery Point Objective

# License and Subscription
LICENSE_KEY=your-enterprise-license-key-here
SUBSCRIPTION_LEVEL=enterprise
SUPPORT_TIER=premium
MAX_USERS=10000
MAX_VAULT_ITEMS=100000000  # 100 million

# Development and Testing (set to false/disabled in production)
DEBUG_MODE=false
PROFILING_ENABLED=false
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_SWAGGER_UI=false
ENABLE_DEBUG_ENDPOINTS=false

# Rate Limiting and DDoS Protection
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20
DDOS_PROTECTION_ENABLED=true
IP_WHITELIST=
IP_BLACKLIST=

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' https:"
CSP_CONNECT_SRC="'self' https:"

# Session Security
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
SESSION_DOMAIN=.yourdomain.com

# Additional Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin