# SecureVault Development Configuration

# Server Configuration
SECUREVAULT_SERVER_PORT=8080
SECUREVAULT_SERVER_ENVIRONMENT=development
SECUREVAULT_SERVER_TLS_ENABLED=false
SECUREVAULT_SERVER_HOST=0.0.0.0

# Database Configuration
SECUREVAULT_DATABASE_ENCRYPTION_KEY=SecureVault256BitEncryptionKey2024ProductionReadySecurityFirst!
SECUREVAULT_DATABASE_MAX_CONNECTIONS=100
SECUREVAULT_DATABASE_IDLE_TIMEOUT=300
# Use PostgreSQL for development (you may need to install PostgreSQL or use Docker)
SECUREVAULT_DATABASE_URL=postgres://postgres:annam123@localhost:5432/securevault?sslmode=prefer
# Redis Configuration (optional for development)
# SECUREVAULT_REDIS_URL=redis://localhost:6379
# SECUREVAULT_REDIS_PASSWORD=SecureVault2024Redis!
# SECUREVAULT_REDIS_DB=0
# SECUREVAULT_REDIS_MAX_CONNECTIONS=50

# Security Configuration - Production Ready
SECUREVAULT_JWT_SECRET=SecureVault2024JWT256BitSecretKeyProductionReadyChangeInProductionNeverCommitToGit!
SECUREVAULT_JWT_REFRESH_SECRET=SecureVault2024Refresh256BitSecretKeyProductionReadyChangeInProductionNeverCommit!
SECUREVAULT_HMAC_SECRET=SecureVault2024HMAC256BitSecretKeyProductionReadyChangeInProductionNeverCommitToGit!
SECUREVAULT_CSRF_SECRET=SecureVault2024CSRF256BitSecretKeyProductionReadyChangeInProductionNeverCommitToGit!
SECUREVAULT_MASTER_ENCRYPTION_KEY=SecureVault2024Master256BitEncryptionKeyProductionReadyNeverCommitToGit!
SECUREVAULT_JWT_EXPIRY=15m
SECUREVAULT_JWT_REFRESH_EXPIRY=7d

# Advanced Encryption Configuration
SECUREVAULT_AES_KEY_SIZE=256
SECUREVAULT_KEY_ROTATION_INTERVAL=90d
SECUREVAULT_PASSWORD_SALT_ROUNDS=15
SECUREVAULT_QUANTUM_RESISTANT=true
SECUREVAULT_ZERO_KNOWLEDGE=true

# MFA Configuration - Production Ready
SECUREVAULT_WEBAUTHN_RP_ID=securevault.com
SECUREVAULT_WEBAUTHN_RP_NAME=SecureVault Production
SECUREVAULT_WEBAUTHN_ORIGIN=https://securevault.com
SECUREVAULT_WEBAUTHN_TIMEOUT=60000
SECUREVAULT_SMS_API_KEY=prod-sms-api-key-change-this
SECUREVAULT_SMS_PROVIDER=twilio
SECUREVAULT_TOTP_ISSUER=SecureVault
SECUREVAULT_TOTP_WINDOW=1
SECUREVAULT_BIOMETRIC_ENABLED=true

# Email Configuration
SECUREVAULT_SMTP_HOST=smtp.gmail.com
SECUREVAULT_SMTP_PORT=587
SECUREVAULT_SMTP_USER=noreply@securevault.com
SECUREVAULT_SMTP_PASS=SecureVault2024Email!
SECUREVAULT_SMTP_FROM=SecureVault <noreply@securevault.com>

# File Storage - Production Ready
SECUREVAULT_UPLOAD_PATH=./uploads
SECUREVAULT_BACKUP_PATH=./backups
SECUREVAULT_LOG_PATH=./logs
SECUREVAULT_MAX_FILE_SIZE=50MB
SECUREVAULT_STORAGE_ENCRYPTION=true

# Security Features - Military Grade
SECUREVAULT_RATE_LIMIT_ENABLED=true
SECUREVAULT_RATE_LIMIT_WINDOW=15m
SECUREVAULT_RATE_LIMIT_MAX_REQUESTS=100
SECUREVAULT_BRUTE_FORCE_PROTECTION=true
SECUREVAULT_BRUTE_FORCE_THRESHOLD=5
SECUREVAULT_IP_WHITELIST=127.0.0.1,::1
SECUREVAULT_CORS_ORIGINS=https://securevault.com,https://admin.securevault.com

# Intrusion Detection System - Advanced
SECUREVAULT_IDS_ENABLED=true
SECUREVAULT_IDS_AUTO_BLOCK=true
SECUREVAULT_IDS_BLOCK_DURATION=24h
SECUREVAULT_IDS_THREAT_THRESHOLD=70
SECUREVAULT_IDS_GEO_BLOCKING=true
SECUREVAULT_IDS_BEHAVIORAL_ANALYSIS=true
SECUREVAULT_IDS_PATTERN_MATCHING=true

# Backup & Disaster Recovery - Enterprise
SECUREVAULT_BACKUP_ENABLED=true
SECUREVAULT_BACKUP_SCHEDULE=0 2 * * *
SECUREVAULT_BACKUP_RETENTION_DAYS=90
SECUREVAULT_BACKUP_COMPRESSION=true
SECUREVAULT_BACKUP_ENCRYPTION=true
SECUREVAULT_BACKUP_VERIFICATION=true
SECUREVAULT_BACKUP_S3_BUCKET=securevault-prod-backups
SECUREVAULT_BACKUP_S3_REGION=us-east-1
SECUREVAULT_BACKUP_ENCRYPTION_KEY=SecureVault2024BackupEncryption256BitKeyChangeInProduction!
SECUREVAULT_DR_ENABLED=true
SECUREVAULT_DR_RTO_HOURS=4
SECUREVAULT_DR_RPO_MINUTES=15

# Performance Monitoring - Production
SECUREVAULT_MONITORING_ENABLED=true
SECUREVAULT_METRICS_COLLECTION=true
SECUREVAULT_APM_ENABLED=true
SECUREVAULT_HEALTH_CHECK_ENABLED=true
SECUREVAULT_PERFORMANCE_LOGGING=true
SECUREVAULT_METRICS_INTERVAL=60s
SECUREVAULT_ALERT_EMAIL=admin@securevault.com

# Logging - Comprehensive
SECUREVAULT_LOG_LEVEL=info
SECUREVAULT_LOG_FORMAT=json
SECUREVAULT_AUDIT_LOGGING=true
SECUREVAULT_SECURITY_LOGGING=true
SECUREVAULT_BLOCKCHAIN_AUDIT=true
SECUREVAULT_LOG_ROTATION=daily
SECUREVAULT_LOG_MAX_SIZE=100MB
SECUREVAULT_LOG_MAX_FILES=30

# Localization - Vietnamese First
SECUREVAULT_DEFAULT_LANGUAGE=vi
SECUREVAULT_SUPPORTED_LANGUAGES=vi,en
SECUREVAULT_TIMEZONE=Asia/Ho_Chi_Minh
SECUREVAULT_CURRENCY=VND
SECUREVAULT_DATE_FORMAT=DD/MM/YYYY

# Advanced Features
SECUREVAULT_RBAC_ENABLED=true
SECUREVAULT_RBAC_ROLES=6
SECUREVAULT_MFA_REQUIRED_ROLES=vault_admin,security_admin,super_admin
SECUREVAULT_SESSION_SECURITY=strict
SECUREVAULT_PASSWORD_POLICY=military
SECUREVAULT_COMPLIANCE_MODE=strict

# Production Security Headers
SECUREVAULT_SECURITY_HEADERS=true
SECUREVAULT_HSTS_ENABLED=true
SECUREVAULT_CSP_ENABLED=true
SECUREVAULT_FRAME_OPTIONS=DENY
SECUREVAULT_CONTENT_TYPE_OPTIONS=nosniff
SECUREVAULT_XSS_PROTECTION=1

# Development (disable in production)
SECUREVAULT_DEBUG_MODE=false
SECUREVAULT_CORS_DEBUG=false
SECUREVAULT_SQL_DEBUG=false
