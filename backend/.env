# SecureVault Configuration

# Server Configuration
SECUREVAULT_SERVER_PORT=8080
SECUREVAULT_SERVER_ENVIRONMENT=development
SECUREVAULT_SERVER_TLS_ENABLED=false
SECUREVAULT_SERVER_TLS_CERT_FILE=./certs/server.crt
SECUREVAULT_SERVER_TLS_KEY_FILE=./certs/server.key

# Database Configuration
SECUREVAULT_DATABASE_URL=postgres://postgres:annam123@localhost:5432/securevault?sslmode=prefer
SECUREVAULT_DATABASE_ENCRYPTION_KEY=your-very-secure-32-byte-encryption-key-here-change-this

# Redis Configuration
SECUREVAULT_REDIS_URL=redis://localhost:6379
SECUREVAULT_REDIS_PASSWORD=

# Security Configuration
SECUREVAULT_JWT_SECRET=your-very-secure-jwt-secret-key-change-this-to-something-random
SECUREVAULT_HMAC_SECRET=your-very-secure-hmac-secret-key-change-this-to-something-random
SECUREVAULT_CSRF_SECRET=your-very-secure-csrf-secret-key-change-this-to-something-random

# MFA Configuration
SECUREVAULT_WEBAUTHN_RP_ID=localhost
SECUREVAULT_WEBAUTHN_RP_NAME=SecureVault Development
SECUREVAULT_WEBAUTHN_ORIGIN=http://localhost:3000
SECUREVAULT_SMS_API_KEY=your-sms-api-key-here

# Backup Configuration
SECUREVAULT_BACKUP_S3_BUCKET=securevault-backups
SECUREVAULT_BACKUP_S3_REGION=us-east-1
SECUREVAULT_BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-change-this

# Production overrides (uncomment for production)
# SECUREVAULT_SERVER_ENVIRONMENT=production
# SECUREVAULT_SERVER_TLS_ENABLED=true
# SECUREVAULT_DATABASE_URL=postgres://user:password@production-db:5432/securevault?sslmode=require
